      }
      .shorts {
        font-weight: 300;
        font-size: 30px;
        margin-top: 20px;
      }
      .stock {
        position: absolute;
        font-size: 50px;
        top: 30px;
        right: 40px;
        text-align: right;
      }
      #map {
        position: absolute;
        border-radius: 20px;
        bottom: 40px;
        right: 40px;
        width: 650px;
        height: 650px;
        opacity: 0.8;
      }
      .map-desc {
        position: absolute;
        padding: 10px 20px 4px;
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        display: inline-block;
        font-size: 50px;
        top: 140px;
        right: 70px;
        text-align: right;
